<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Базовый стиль Widget -->
    <style name="Widget" parent="" />

    <!-- Общий стиль для кнопок с иконками -->
    <style name="Widget.IconButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">#1A1B22</item>
        <item name="android:textSize">22sp</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

     <!-- Стиль для кнопок на главном экране -->
         <style name="Widget.MainScreenButton" parent="Widget.IconButton">
             <item name="android:layout_height">0dp</item>
             <item name="android:layout_weight">1</item>
         </style>

    <style name="TextAppearance.MainTitle" parent="TextAppearance.AppCompat.Title">
           <item name="android:textSize">@dimen/main_title_text_size</item>
           <item name="android:textColor">@color/white</item>
            <item name="android:fontFamily">@font/ys_display_medium</item>
        </style>



     <!-- Стиль для текста с кастомным шрифтом -->
     <style name="TextAppearance.YSDisplay.Medium" parent="TextAppearance.AppCompat">
          <item name="android:fontFamily">@font/ys_display_medium</item>
             <item name="android:textSize">22sp</item>
             <item name="android:textStyle">normal</item>
         <item name="android:textAllCaps">false</item>
             <item name="android:textColor">?android:attr/textColorPrimary</item>
             <item name="android:gravity">center</item>
             <item name="android:lineSpacingMultiplier">1.0</item>
             <item name="android:letterSpacing">0.0</item>
             <item name="android:includeFontPadding">false</item>
         </style>


    <!-- Стиль для заголовка настроек -->
         <style name="TextAppearance.SettingsTitle" parent="TextAppearance.AppCompat.Title">
         <item name="android:textSize">@dimen/settings_title_text_size</item>
         <item name="android:textColor">?attr/colorOnSurface</item>
         <item name="android:fontFamily">@font/ys_display_medium</item>
         </style>

         <!-- Стиль для кнопок в меню настроек -->
         <style name="Widget.SettingsMenuItemButton" parent="Widget.AppCompat.Button.Borderless">
         <item name="android:layout_width">0dp</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_weight">1</item>
         <item name="android:background">@android:color/transparent</item>
         <item name="android:gravity">start|center_vertical</item>
         <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
             <item name="android:textAllCaps">false</item>
       <item name="android:textSize">16sp</item>
       <item name="android:fontFamily">@font/ys_display_regular</item>
       <item name="android:lineSpacingMultiplier">1.0</item>
       <item name="android:letterSpacing">0.0</item>
       <item name="android:minHeight">48dp</item>
    </style>

        <!-- Стиль для контейнера элемента меню -->
        <style name="Widget.SettingsMenuItemContainer">
       <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/settings_menu_item_margin_top</item>
         <item name="android:layout_marginBottom">@dimen/settings_menu_item_margin_bottom</item>
   </style>

         <!-- Стиль для иконок справа -->
         <style name="Widget.SettingsMenuIcon">
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_gravity">center_vertical</item>
         <item name="android:layout_marginStart">24dp</item>
         <item name="android:importantForAccessibility">no</item>
     </style>

         <!-- Стиль для Switch -->
     <style name="Widget.SettingsSwitch">
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:layout_gravity">center_vertical</item>
         <item name="android:layout_marginStart">24dp</item>
     </style>
</resources>