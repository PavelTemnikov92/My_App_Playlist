<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:minHeight="56dp"
        android:orientation="horizontal"
        android:padding="0dp"
        tools:ignore="ExtraText,TextSizeCheck">
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Назад"
            android:src="@drawable/back"
            app:tint="#FF000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_title_text_size" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/settings_menu_item_margin_top"
        android:layout_marginBottom="@dimen/settings_menu_item_margin_bottom">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingStart="0dp"
            android:text="@string/dark_theme"
            android:textAppearance="@string/dark_theme"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_menu_text_size"
            android:background="@android:color/transparent" />

        <Switch
            android:id="@+id/switchDarkTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checked="false"
            android:layout_marginStart="24dp"
            tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/settings_menu_item_margin_bottom"
        android:layout_marginBottom="@dimen/settings_menu_item_margin_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="start"
            android:paddingStart="0dp"
            android:text="@string/share_app"
            android:textAppearance="@string/share_app"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_menu_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_share24"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/settings_menu_item_margin_bottom"
        android:layout_marginBottom="@dimen/settings_menu_item_margin_bottom">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="start"
            android:paddingStart="0dp"
            android:text="@string/support"
            android:textAppearance="@string/support"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_menu_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_support24" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/settings_menu_item_margin_bottom"
        android:layout_marginBottom="@dimen/settings_menu_item_margin_bottom">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingStart="0dp"
            android:text="@string/user_agreement"
            android:textAppearance="@string/user_agreement"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_menu_text_size"
            android:background="@android:color/transparent" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="24dp"
            android:src="@drawable/ic_arrow_right24" />
    </LinearLayout>
</LinearLayout>