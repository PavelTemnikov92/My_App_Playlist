<?xml version="1.0" encoding="utf-8"?>
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
         xmlns:tools="http://schemas.android.com/tools"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:paddingStart="16dp"
        android:paddingEnd="16dp">


         <!-- Заголовок  -->
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
             android:minHeight="56dp"
             android:orientation="horizontal"
             android:padding="0dp"
             tools:ignore="ExtraText,TextSizeCheck">

             <ImageButton
                 android:id="@+id/backButton"
                 android:layout_width="24dp"
                 android:layout_height="24dp"
                 android:background="?attr/selectableItemBackground"
                 android:contentDescription="@string/back_button_description"
                 android:src="@drawable/back"
                 app:tint="?attr/colorOnSurface"
                 tools:ignore="TouchTargetSizeCheck" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="16dp"
                 android:text="@string/settings"
                 style="@style/TextAppearance.SettingsTitle" />
         </LinearLayout>

         <!-- Тема -->
         <LinearLayout style="@style/Widget.SettingsMenuItemContainer">
         <Button
             android:id="@+id/btnDarkTheme"
             style="@style/Widget.SettingsMenuItemButton"
             android:text="@string/dark_theme" />
         <Switch
             android:id="@+id/switchDarkTheme"
             style="@style/Widget.SettingsSwitch"
             android:checked="true"
             tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />
     </LinearLayout>

         <!-- Поделиться -->
         <LinearLayout style="@style/Widget.SettingsMenuItemContainer">
         <Button
             android:id="@+id/btnShareApp"
             style="@style/Widget.SettingsMenuItemButton"
            android:text="@string/share_app" />
<ImageView
             style="@style/Widget.SettingsMenuIcon"
             android:src="@drawable/ic_share24" />
     </LinearLayout>

         <!-- Поддержка -->
         <LinearLayout style="@style/Widget.SettingsMenuItemContainer"
             tools:ignore="ExtraText">

             <Button
             android:id="@+id/btnSupport"
                 style="@style/Widget.SettingsMenuItemButton"
             android:text="@string/support" />
             <ImageView
                 style="@style/Widget.SettingsMenuIcon"
             android:src="@drawable/ic_support24" />
     </LinearLayout>

         <!-- Пользовательское соглашение -->
        <LinearLayout style="@style/Widget.SettingsMenuItemContainer">
         <Button
            android:id="@+id/btnUserAgreement"
             style="@style/Widget.SettingsMenuItemButton"
             android:text="@string/user_agreement" />
         <ImageView
             style="@style/Widget.SettingsMenuIcon"
             android:src="@drawable/ic_arrow_right24" />
     </LinearLayout>

     </LinearLayout>